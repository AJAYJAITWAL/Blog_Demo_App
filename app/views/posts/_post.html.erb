<div id="delete_<%= post.id %>" class="container">
  <div>
    <strong><%= post.title %></strong>
  </div>
  <div class="read-more">
    <%= truncate post.body, length: 200 %><span><%= link_to ' ...Read more', post %></span>
  </div>
  <div class="mt-2">
    <%= link_to 'Show', post_path(post), remote: true, :class => "button btn btn-outline-primary btn-xs", :id => 'show_article' %>
    <% if current_user.has_role?(:user) && article.user.id == current_user.id || current_user.has_role?(:admin) %>
      <%= link_to 'Edit', edit_post_path(post), remote: true, :class=> "btn btn-outline-info btn-xs", :id => 'edit_article' %>
      
      <%= link_to 'Destroy', post_path(post),
            remote: true, method: :delete, data: { confirm: 'Are you sure?' }, class:"delete",:class => "button btn btn-outline-warning btn-xs"%>
    <% end %>        
  </div>
  <hr/>
</div>